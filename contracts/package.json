{
  "name": "trust-protocol",
  "version": "0.0.1",
  "private": true,
  "description": "Trust Protocol",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "account": "yarn foundry:account",
    "account:generate": "yarn foundry:generate",
    "account:import": "yarn foundry:account-import",
    "chain": "yarn foundry:chain",
    "compile": "yarn foundry:compile",
    "deploy": "yarn foundry:deploy",
    "fork": "yarn foundry:fork",
    "format": "yarn next:format && yarn foundry:format",
    "foundry:account": "yarn workspace @trust-protocol/foundry account",
    "foundry:account-import": "yarn workspace @trust-protocol/foundry account:import",
    "foundry:chain": "yarn workspace @trust-protocol/foundry chain",
    "foundry:compile": "yarn workspace @trust-protocol/foundry compile",
    "foundry:deploy": "yarn workspace @trust-protocol/foundry deploy",
    "foundry:deploy-verify": "yarn workspace @trust-protocol/foundry deploy:verify",
    "foundry:flatten": "yarn workspace @trust-protocol/foundry flatten",
    "foundry:fork": "yarn workspace @trust-protocol/foundry fork",
    "foundry:format": "yarn workspace @trust-protocol/foundry format",
    "foundry:generate": "yarn workspace @trust-protocol/foundry account:generate",
    "foundry:lint": "yarn workspace @trust-protocol/foundry lint",
    "foundry:test": "yarn workspace @trust-protocol/foundry test",
    "foundry:verify": "yarn workspace @trust-protocol/foundry verify",
    "generate": "yarn foundry:generate",
    "postinstall": "husky install",
    "lint": "yarn nextjs:lint && yarn foundry:lint",
    "next:build": "yarn workspace @trust-protocol/nextjs build",
    "next:check-types": "yarn workspace @trust-protocol/nextjs check-types",
    "next:format": "yarn workspace @trust-protocol/nextjs format",
    "next:lint": "yarn workspace @trust-protocol/nextjs lint",
    "next:serve": "yarn workspace @trust-protocol/nextjs serve",
    "precommit": "lint-staged",
    "start": "yarn workspace @trust-protocol/nextjs dev",
    "test": "yarn foundry:test",
    "vercel": "yarn workspace @trust-protocol/nextjs vercel",
    "vercel:login": "yarn workspace @trust-protocol/nextjs vercel:login",
    "vercel:yolo": "yarn workspace @trust-protocol/nextjs vercel:yolo",
    "verify": "yarn foundry:verify"
  },
  "devDependencies": {
    "husky": "~8.0.3",
    "lint-staged": "~13.2.2"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=18.18.0"
  }
}
